{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@env": ["src/env/environment"],
      "@core/*": ["src/core/*"],
    },
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
